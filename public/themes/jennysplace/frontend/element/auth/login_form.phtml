        echo "</div>";
        echo "<div class='form-group'>";
        echo $this->formRow($login_form->get('password')->setOptions(['label' => '']));
        echo "</div>";
        echo "<button class='btn btn-success' type='submit'><i class='fa fa-sign-in'></i> Sign In</button>";
        echo $this->form()->closeTag();
