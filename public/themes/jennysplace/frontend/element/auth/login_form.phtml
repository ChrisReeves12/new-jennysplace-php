<?php
    if (!($this->layout()->user instanceof \Library\Model\User\User))
    {
        echo "<p><i class=\"fa fa-sign-in\"></i> Customer Sign-In</p>";
        $login_form->prepare();
        echo $this->form()->openTag($login_form);
